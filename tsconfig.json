{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "ESNext",
        "useDefineForClassFields": true,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "paths": {
            "@components/*": ["src/components/*"],
            "@pages/*": ["src/pages/*"],
            "@assets/*": ["src/assets/*"],
            "@hooks/*": ["src/hooks/*"],
            "@styles/*": ["src/styles/*"],
            "@gql/*": ["src/apollo/*"],
            "@models/*": ["src/models/*"],
            "@utils/*": ["src/utils/*"]
        }
    },
    "include": [
        "src",
        "./**.ts",
        "./**.cjs"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}